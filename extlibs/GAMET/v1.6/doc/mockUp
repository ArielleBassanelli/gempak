#include "gamet.h"

/* the following is pseudo code that would fill in a gamet 
   structure for the SIG CLD (CIG), SIG CLD (TCU) and
   ICE examples */
/* Allocate a gamet struct */
gamet = (GametStruct *)malloc (sizeof(GametStruct));
gamet->fir = "SALT LAKE CITY FIR";
gamet->issuanceHour = 18;
gamet->issuanceDay = 22;
gamet->numElements = 3;

/* Structure filled for element type SIG CLD (CIG) */
gamet->element[0].type = cig_cld;
gamet->element[0].numAreas = 2;

/* 1st area of element SIG CLD (CIG) */
gamet->element[0].area[0].vorString = "50SW YXH TO 60ESE HVR TO 50W MLS
                  TO 20W BIL TO 40SSW YQL TO 50SW YXH"; /* no CR in actual text */ 
gamet->element[0].area[0].attr = "OVC CIG BLW 10/080";
gamet->element[0].area[0].snapshot[0] = 0;    /* No forecast for 0 hr snapshot */
gamet->element[0].area[0].snapshot[1] = 1;    /* Forecast for 3 hr snapshot */
gamet->element[0].area[0].snapshot[2] = 1;    /* Forecast for 6 hr snapshot */

/* 2nd area of element SIG CLD (CIG) */
gamet->element[0].area[1].vorString = "MLD TO 20E SLC TO DTA TO BVL TO
                   50WSW MLD TO MLD";
gamet->element[0].area[1].attr = "BKN CIG BLW 010/060";
gamet->element[0].area[1]->snapshot[0] = 0;   /* No forecast for 0 hr snapshot */ 
gamet->element[0].area[1]->snapshot[1] = 0;   /* No forecast for 0 hr snapshot */ 
gamet->element[0].area[1]->snapshot[2] = 1;   /* Forecast for 6 hr snapshot */ 

/* End element SIG CLD (CIG) */

/* Structure filled for element type SIG CLD (TCU) */
/* QUESTION: would this be just another area in the element above since they are
  both SIG CLD ? */

gamet->element[1].type = cig_cld;
gamet->element[1].numAreas = 1;

/* 1st area of element SIG CLD (TCU) */
gamet->element[1].area[0].vorString = "80NNW DNJ TO 50NW DLN TO DBS TO 30NW TWF
                   TO 30SSE BKE TO 80NNW DNJ";
gamet->element[1].area[0].attr = "OCNL TCU 100/FL300";
gamet->element[1].area[0].snapshot[0] = 1;    /* Forecast for 0 hr snapshot */
gamet->element[1].area[0].snapshot[1] = 0;    /* NO forecast for 3 hr snapshot */
gamet->element[1].area[0].snapshot[2] = 0;    /* NO forecast for 6 hr snapshot */

/* End element SIG CLD (TCU) */

/* Structure for element type ICE */
gamet->element[2].type = ice;
gamet->element[2].numAreas = 1;

/* 1st area of element ICE */
gamet->element[2].area[0].vorString = "YXC TO 70SSW YYN TO 50WSW ISN TO 90SSW MLS
                   TO BIL TO 50E JAC TO 20N PIH TO 40N DNJ TO YXC";
gamet->element[2].area[0].attr = "MOD RIME ICGIC 090/FL180";
gamet->element[2].area[0].snapshot[0] = 0;     /* NO forecast at 0 hr snapshot */
gamet->element[2].area[0].snapshot[1] = 1;     /* Forecast for 3 hr snapshot */
gamet->element[2].area[0].snapshot[2] = 1;     /* Forecast for 6 hr snapshot */

